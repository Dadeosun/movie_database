<div class="page-header">
  <h1>
    Movies
    <a href="/movies/new" class="btn btn-lg btn-success">New Movie</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Title</th>
        <th>Cover art</th>
        <th>Director</th>
        <th>Year</th>
        <th>Actions</th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.email %></td>
        <td><%= movie.password %></td>
        <td><%= movie.title %></td>
        <td><%= movie.cover_art %></td>
        <td><%= movie.director_id %></td>
        <td><%= movie.year %></td>
        <td>
          <a href="/movies/<%= movie.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
