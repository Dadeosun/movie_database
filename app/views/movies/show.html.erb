<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @movie.email %></dd>

      <dt>Password</dt>
      <dd><%= @movie.password %></dd>

      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Cover art</dt>
      <dd><%= @movie.cover_art %></dd>

      <dt>Director</dt>
      <dd><%= @movie.director_id %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
